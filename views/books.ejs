<div class="page-title">Library</div>
<div class="library-wrapper">
    <div class="search-library-wrapper">
        <label for="">Search Title/Author:</label>
        <input class="search-library-input" type="text" name="search_library">
    </div>
    <div class="btn-link-wrapper"><a class="btn-link" href="/books/new">Add custom book</a></div>
    <div class="public-books">
        <% for (let book of booksPublic) { %>
            <a href="/books/<%=book.id%>">
                <div class="book-tile">
                    <div class="book-tile-top">
                        <img class="book-img" src="<%=book.image_url%>" alt="book">
                    </div>
                    <div class="book-tile-bottom">
                        <div class="book-title">
                            <div class="property">Title: </div><span class="title-text"><%= book.title%></span>
                        </div>
                        <div class="author"><div class="property">Author: </div><span class="author-text"><%= book.author %></span></div>
                        <div class="year"><div class="property">Year: </div><%= book.publication_year %></div>
                    </div>
                </div>
            </a>
        <% } %>
    </div>

    <% if (booksPrivate.length > 0) { %>
        <div class="page-subtitle">Added by <span class="name-span"><%= currentUser.name %></span></div>
        <div class="private-books">
            <% for (let book of booksPrivate) { %>
                <a href="/books/<%=book.id%>">
                    <div class="book-tile <% if (!book.is_public) { %> custom-book <% } %>">
                        <div class="book-tile-top">
                            <img class="book-img" src="<%=book.image_url%>" alt="book">
                        </div>
                        <div class="book-tile-bottom">
                            <div class="book-title">
                                <div class="property">Title: </div><span class="title-text"><%= book.title%></span>
                            </div>
                            <div class="author"><div class="property">Author: </div><span class="author-text"><%= book.author %></span></div>
                            <div class="year"><div class="property">Year: </div><%= book.publication_year %></div>
                        </div>
                    </div>
                </a>
            <% } %>
        </div>
    <% } %>
</div>

<script src="/library.js"></script>