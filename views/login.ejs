<h1>Login</h1>

<% if (locals.errorMessage) { %>
    <p class="error"> <%= errorMessage %> </p>
<% } %>

<form action="/login" method="post">
    <div>
        <label for="">Email</label>
        <input type="text" name="email">
    </div>
    <div>
        <label for="">Password</label>
        <input type="password" name="password">
    </div>
    <button>Login</button>
</form>